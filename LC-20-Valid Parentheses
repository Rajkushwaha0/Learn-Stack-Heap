class Solution {
    public boolean isValid(String s) {
        if(s.length()==1) return false;
        Stack<Character> stack = new Stack<>();
        for(int i = 0;i < s.length();i++){
            char ch=s.charAt(i);
            if(ch=='(' || ch=='{' || ch=='['){
                stack.push(ch);
            }
            if(ch==')'){
                if(stack.isEmpty()){
                    return false;
                }
                else if(stack.peek()=='('){
                stack.pop();
                }
                else {
                    return false;
                }
            }
            if(ch==']' ){
                if(stack.isEmpty()){
                    return false;
                }
                else if(stack.peek()=='['){
                stack.pop();
                }
                else{
                    return false;
                }
            }
            if(ch=='}'){
                if(stack.isEmpty()){
                    return false;
                }
                else if(stack.peek()=='{'){
                stack.pop();
                }
                else{
                    return false;
                }
            }
        }
        if(stack.isEmpty()){
            return true;
        }
        return false;
    }
}
